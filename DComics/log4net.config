<?xml version="1.0"?>
<log4net debug="false">
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Log/rolling-log.log"/>
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="50MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline"/>
    </layout>
  </appender>
  <appender name="FileAppenderXml" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="Log/log-complete.xml"/>
    <appendToFile value="true"/>
    <layout type="DComics.XmlLayoutSchemaLog4j, DComics">
      <locationInfo value="true"/>
    </layout>
    <param name="Encoding" value="utf-8" />
  </appender>
  <root>
    <level value="ALL"/>
    <appender-ref ref="RollingFileAppender"/>
    <appender-ref ref="FileAppenderXml" />
  </root>
</log4net>